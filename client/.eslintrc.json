{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true },
    "project": "./src/*"
  },
  "plugins": ["react"],
  "rules": {
    "camelcase": "off",
    "react/react-in-jsx-scope": 0,
    "react/jsx-uses-react": 0,
    "react/prop-types": 0,
    "multiline-ternary": "off"
  },
  "settings": {
    "react": {
      "version": "18.2"
    }
  }
}

